<CalendarScreen>:
    MDBoxLayout:
        
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 0, 0, 0, 1  # Cor de fundo preta
            Rectangle:
                pos: self.pos
                size: self.size

        CalendarWidget:
        
        MDBottomAppBar:
            md_bg_color: 0.35, 0.35, 0.35, 1
            MDTopAppBar:
                title: "Calend√°rio"
                icon: "plus"
                type: "bottom"
                left_action_items: [["menu", lambda x: app.show_event_view_screen()]]
                mode: "end"
                on_action_button: app.root.current = 'event'

<EventScreen>:
    
<EventViewScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 0, 0, 0, 1  # Cor de fundo preta
            Rectangle:
                pos: self.pos
                size: self.size
        MDTopAppBar:
            title: 'Eventos'
            elevation: 10
            left_action_items: [['arrow-left', lambda x: app.show_calendar_screen()]]

        ScrollView:
            do_scroll_x: False

            MDList:
                id: event_list
                padding: 10
